<% layout("/layouts/boilerplate") %>

<div class="row show-row">
  <div class="col-12 col-lg-6 mt-3 e-content">
    <h2 class="e-h2 mt-3">Create New Listing</h2>
    <br />

    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a catchy title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please enter a valide Title</div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a valide Description</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            required
          />
        </div>

        <div class="mb-4">
          <label class="block font-medium text-gray-700 mb-2">Categories</label>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-2">
            <% const allCategories =
            ['Mountain','Beach','Villas','Camping','Forest','Desert','Hotel','Waterfall'];
            %> <% allCategories.forEach(cat => { %>
            <div class="flex items-center category-icon">
              <input
                type="checkbox"
                id="category-<%= cat.toLowerCase() %>"
                name="listing[category][]"
                value="<%= cat %>"
                class="h-4 w-4 text-indigo-600 border-gray-300 rounded "
              />
              <label
                for="category-<%= cat.toLowerCase() %>"
                class="ml-2 text-gray-700"
                ><%= cat %></label
              >
            </div>
            <% }) %>
          </div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="text"
              name="listing[price]"
              placeholder="1250"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valide</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country name should be valide</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Pune, Maharashtra"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valide</div>
        </div>

        <button class="btn e-btn btn-primary mt-3">Add</button>
      </div>
    </form>
  </div>
</div>
