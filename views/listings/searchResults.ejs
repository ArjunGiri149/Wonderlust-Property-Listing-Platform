<% layout("/layouts/boilerplate") %>

<h2 class="mt-3">Search Results for "<%= query %>"</h2>
<hr />

<% if (results.length === 0) { %>
<h4>No listings found for this location ðŸ˜¢</h4>
<% } %>

<div class="row row-cols-xl-3 row-cols-lg-2 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of results) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card clo listing-card">
      <img
        class="card-img-top"
        src="<%= listing.image.url %>"
        alt="listing_image"
      />

      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          &#8377;<%= listing.price %>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
